<% layout('layouts/layout') %><!-- views/error.ejs -->

    <main class="container error-page" role="main">
        <h1>
            <%= message || 'An error occurred' %>
        </h1>
        <p>Status: <%= status || 500 %>
        </p>
        <% if (error && error.stack) { %>
            <details>
                <summary>Debug info (stack)</summary>
                <pre><%= error.stack %></pre>
            </details>
            <% } %>
                <p><a href="/">Return to Home</a></p>
    </main>